<% content_for :title, "Chi tiết bài viết" %>
<div class="container mt-4">
  <% if @post.image.present? %>
    <%= image_tag @post.image, class: "img-fluid", alt: @post.title %>
  <% end %>
  
  <h1><%= @post.title %></h1>
  <p class="text-muted"><%= @post.created_at.strftime('%d/%m/%Y') %></p>
  <%# image_tag(@post.image.presence || "no-image.png", class: "card-img-top", alt: post.title) %>

  <div class="mt-3">
    <%= simple_format(@post.body) %>
  </div>
  <%= link_to "Back", :back, class: "btn btn-light" %>
</div>
