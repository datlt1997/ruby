<p style="color: green;"><%= notice %></p>

<div class="card">
  <div class="card-header d-flex align-items-center">
    <%= link_to posts_path, class: "btn btn-outline-secondary me-2" do %>
      <%= icon('fa-solid', 'arrow-left') %>
    <% end %>
    <h5 class="mb-0">Edit Post</h5>
  </div>

  <div class="card-body mx-5">
    <%= form_with model: @post, local: true, html: { multipart: true } do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
      </div>

      <div class="mb-3">
        <%= form.label :body, class: "form-label" %>
        <%= form.text_area :body, class: "form-control", placeholder: "Content" %>
      </div>

      <div class="mb-3">
        <%= form.label :image, class: "form-label" %>
        <%# Hiển thị ảnh hiện tại nếu có %>
        <%= image_tag url_for(@post.image), size: "200x150", class: "mb-2 d-block" if @post.image.attached? %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <%= form.submit "Update", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
