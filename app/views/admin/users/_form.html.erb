<%= form_with model: [:admin, @user], local: true, html: { multipart: true } do |form| %>
  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control", placeholder: "Fill email" %>
  </div>

  <div class="mb-3">
    <%= form.label :full_name , class: "form-label" %>
    <%= form.text_field :full_name , class: "form-control", placeholder: "Fill full name" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: "form-control", placeholder: "Fill phone" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Fill password" %>
  </div>

  <div class="mb-3">
    <%= form.label :avatar, class: "form-label" %>
    <%= image_tag url_for(@user.avatar), size: "200x150", class: "mb-2 d-block" if @user.avatar.attached? %>
    <%= form.file_field :avatar, class: "form-control" %>
  </div>

  <div class="text-center">
    <%= link_to "Back", admin_users_path, class: "btn btn-outline-secondary me-2" %>
    <%= form.submit "Create", class: "btn btn-success" %>
  </div>
<% end %>