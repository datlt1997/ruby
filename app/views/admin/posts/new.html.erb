<% content_for :title, "Tạo bài viết" %>
<% content_for :title_page, "Tạo bài viết" %>
<div class="card mb-3">
  <div class="card-body mx-2 mt-2 mb-4">
    <%= form_with model: [:admin, @post], local: true, html: { multipart: true } do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
      </div>

      <div class="mb-3">
        <%= form.label :short_description , class: "form-label" %>
        <%= form.text_area :short_description , class: "form-control", placeholder: "Content" %>
      </div>

      <div class="mb-3">
        <%= form.label :body, class: "form-label" %>
        <%= form.text_area :body, class: "form-control", placeholder: "Content" %>
      </div>
      
      <div class="mb-3">
        <%= form.label :tag, class: "form-label" %>
        <% Tag.all.each do |tag| %>
          <div>
            <%= check_box_tag "post[tag_ids][]", tag.id, @post.tag_ids.include?(tag.id), id: "post_tag_ids_#{tag.id}" %>
            <%= label_tag "post_tag_ids_#{tag.id}", tag.name %>
          </div>
        <% end %>
      </div>
      

      <div class="mb-3">
        <%= form.label :image, class: "form-label" %>
        <%# Hiển thị ảnh nếu đã có %>
        <%= image_tag url_for(@post.image), size: "200x150", class: "mb-2 d-block" if @post.image.attached? %>
        <%= form.file_field :image, class: "form-control" %>
      </div>
      <div class="text-center">
        <%= link_to "Back", admin_posts_path, class: "btn btn-outline-secondary me-2" %>
        <%= form.submit "Create", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
