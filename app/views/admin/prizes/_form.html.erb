<%= form_with model: [:admin, @prize], local: true, html: { multipart: true } do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Fill name" %>
  </div>

  <div class="mb-3">
    <%= form.label :quantity , class: "form-label" %>
    <%= form.text_field :quantity , class: "form-control", placeholder: "Fill quantity" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description, class: "form-control", placeholder: "Fill description" %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= image_tag url_for(@prize.image), size: "200x150", class: "mb-2 d-block" if @prize.image.attached? %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="text-center">
    <%= link_to "Back", admin_prizes_path, class: "btn btn-outline-secondary me-2" %>
    <%= form.submit "Create", class: "btn btn-success" %>
  </div>
<% end %>