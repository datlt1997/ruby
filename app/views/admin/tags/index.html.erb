<% content_for :title, "Danh sách nhãn" %>
<% content_for :title_page, "Danh sách nhãn" %>
<div class="card mb-3">
  <div class="card-body mx-2">
    <%= link_to "New Tag", new_admin_tag_path, class: "btn btn-primary" %>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
              <tr>
                  <td><%= tag.id %></td>
                  <td><%= tag.name %></td>
                  <td>
                    <%= link_to edit_admin_tag_path(tag), class: "btn btn-primary" do %>
                      <%= icon('fa-solid', 'pen') %>
                    <% end %>
                    <%= button_to admin_tag_path(tag), method: :delete, data: { turbo_confirm: "Are you sure?" }, form: { class: 'd-inline-block' }, class: "btn btn-danger" do %>
                      <%= icon('fa-solid', 'trash')%>
                    <% end %>
                  </td>
              </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>