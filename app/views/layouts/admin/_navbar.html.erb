<header class="p-3 border-bottom">
  <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
    <a href="/admin" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
      <%= image_tag "logo.png", alt: "Blog", height: 40 %>
      <span class="ms-4">Lucky Spin</span>
    </a>

    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
    </ul>
    
    <% if current_user %>
      <div data-controller="locale" class="me-3">
        <%= select_tag :locale, options_for_select([["Tiếng Việt", "vi"], ["English", "en"]], I18n.locale),
                       id: "locale-select",
                       class: "form-select w-auto d-inline-block",
                       data: { action: "change->locale#change" } %>
        </select>
      </div>
      <div class="dropdown text-end">
        <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
        </a>
        <ul class="dropdown-menu dropdown-menu-end text-small">
          <li><a class="dropdown-item" href="#">New project...</a></li>
          <li><a class="dropdown-item" href="#">Settings</a></li>
          <li><a class="dropdown-item" href="#">Profile</a></li>
          <li><hr class="dropdown-divider"></li>
          <li>
              <% logout_path = current_user.admin? ? admin_logout_path : user_logout_path %>
              <%= button_to "Đăng xuất", logout_path, method: :delete, class: "dropdown-item", form: { style: "display: inline;" } %>
            </li>
        </ul>
      </div>
    <% elsif current_page?(admin_login_path) %>

          
    <% else %>
      <%= link_to "Đăng nhập", admin_login_path, class: "btn btn-primary" %>
    
    <% end %>
  </div>
</header>
