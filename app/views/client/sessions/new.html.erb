<% content_for :title, "Login" %>
<div class="form-login mx-auto">
  <div class="form-login-header mb-3">
    <%= image_tag "logo.png", alt: "Blog", height: 70 %>
  </div>
  
  <div class="form-login-body">
    <%= form_with model: @user, url: user_login_path, method: :post, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.text_field :email, class: "form-control #{'is-invalid' if @user.errors[:email].any?}", placeholder: "Nhập Email" %>
        <% if flash[:errors]&.dig(:email) %>
          <span class="text-danger d-block"><%= flash[:errors][:email].first %></span>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Mật khẩu", class: "form-label" %>
        <%= f.password_field :password, class: "form-control #{'is-invalid' if @user.errors[:password].any?}", placeholder: "Nhập password" %>
        <% if flash[:errors]&.dig(:password) %>
          <span class="text-danger d-block"><%= flash[:errors][:password].first %></span>
        <% end %>
      </div>

      <%= submit_tag "Đăng nhập", class: "btn btn-primary d-block mx-auto" %>
    <% end %>
  </div>
  
</div>